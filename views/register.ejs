<% include ./partials/header.ejs %>

    <div
        class="bg-[url('https://images.unsplash.com/photo-1604076984203-587c92ab2e58?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] w-full h-screen flex items-center justify-center">
        <div class="w-68 bg-zinc-100 px-16 py-10 rounded-2xl">
            <h1 class="text-3xl text-center font-semibold text-zinc-700 capitalize tracking-tighter leading-none">
                Create New Account</h1>
            <p class="mt-2 mb-4 text-center">Find new ideas to try</p>



            <form action="/register" method="post">

                <input class="block rounded-md border-2 outline-none mt-2 w-full px-3 py-2" type="text" name="fullname"
                    placeholder="fullname">

                <input class="block rounded-md border-2 outline-none mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="username">


                <input class="block rounded-md border-2 outline-none mt-2 w-full px-3 py-2" type="email" name="email"
                    placeholder="email">

                <input class="block rounded-md border-2 outline-none mt-2 w-full px-3 py-2" type="number" name="contact"
                    placeholder="contact">


                <input class="block rounded-md border-2 outline-none mt-2 w-full px-3 py-2" type="password"
                    name="password" placeholder="password">

                <input class="block cursor-pointer mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
                    type="submit" value="Create New Account">

                <p class="w-60 text-xs font-semibold text-zinc-700 mt-7 mx-auto text-center">
                    By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy
                    Policy. Notice at collection.
                </p>
            </form>

            <a class="inline-block mt-7 text-sm font-bold text-zinc-700 text-center w-full" href="/">Login Existing
                Account</a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>